---
import {
    blank_link,
    card_container,
    card_date,
    card_description,
    card_image,
    card_image_,
    card_title
} from "./styles.css";
import {Image} from "astro:assets"
const {imageUrl} = Astro.props

---


<a class={blank_link} href="/news/test">
<div class={card_container}>
<div class={card_image}>
<Image src={imageUrl} class={card_image_} width="100%" height="100%" alt="news image" transition:name="testImage"/>
</div>
    <div class={card_title}>
        <slot name="title"
              slot="title"
        />
    </div>

    <div class={card_date}>
        <slot name="date" slot="date"/>
    </div>
    <div class={card_description}>
        <slot name="description" slot="description"/>
    </div>
</div>
</a>