---
import {
    blank_link,
    card_container,
    card_date,
    card_description,
    card_image,
    card_image_,
    card_title
} from "./styles.css";
import {Image} from "astro:assets"
import {githubPagesLinkHelper} from "../../../../../../../utils/githubPagesLinkHelper";
const {imageUrl,href} = Astro.props

---


<a class={blank_link} href={githubPagesLinkHelper(href)}>
<div class={card_container}>
<div class={card_image}>
<Image src={githubPagesLinkHelper(imageUrl)} class={card_image_} width="100%" height="100%" alt="news image"  transition:name="imgNews"/>
</div>
    <div class={card_title}>
        <slot name="title"
              slot="title"
        />
    </div>

    <div class={card_date}>
        <slot name="date" slot="date"/>
    </div>
    <div class={card_description}>
        <slot name="description" slot="description"/>
    </div>
</div>
</a>